<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory
        app:title="Audio">

        <ListPreference
            android:defaultValue="false"
            android:entries="@array/tts_speed_entries_array"
            android:entryValues="@array/tts_speed_values_array"
            android:key="list_preference_1"
            android:title="TTS Speed" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Announcements">

        <ListPreference
            android:defaultValue="false"
            android:entries="@array/announcement_type_entries_array"
            android:entryValues="@array/announcement_type_values_array"
            android:key="list_preference_2"
            android:title="Type of measurement (Distance or time)" />
        <ListPreference
            android:defaultValue="false"
            android:entries="@array/announcement_format_entries_array"
            android:entryValues="@array/announcement_format_values_array"
            android:key="list_preference_3"
            android:title="Announcements format" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Miscellaneous"/>
    <EditTextPreference
        android:defaultValue="test"
        android:key="edit_text_preference_1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Edit text preference" />

</PreferenceScreen>
